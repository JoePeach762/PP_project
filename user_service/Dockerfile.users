FROM golang:1.21-alpine AS builder

RUN apk add --no-cache git ca-certificates

WORKDIR /app

COPY user_service/go.mod user_service/go.sum ./

RUN go mod download

COPY user_service/ .

RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o users ./cmd/app

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

COPY --from=builder /app/users .

RUN adduser -D -s /bin/sh appuser
USER appuser

CMD ["./users"]