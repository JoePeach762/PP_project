FROM golang:1.21-alpine AS builder

RUN apk add --no-cache git ca-certificates

WORKDIR /app

COPY meal_service/go.mod meal_service/go.sum ./

RUN go mod download

COPY meal_service/ .

RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o meals ./cmd/app

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

COPY --from=builder /app/meals .

RUN adduser -D -s /bin/sh appuser
USER appuser

CMD ["./meals"]